# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=boing
DB_PASSWORD=change_this_password
DB_NAME=boing

# Security
JWT_SECRET=change-this-to-a-random-secret-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=change-this-to-32-char-fernet-key

# Server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Detection Thresholds
RATE_LIMIT_THRESHOLD=100
RATE_LIMIT_WINDOW_SECONDS=60
ANOMALY_ZSCORE_THRESHOLD=3.0
ML_CONTAMINATION=0.1
ML_RETRAIN_INTERVAL_HOURS=24

# Alert Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
ALERT_EMAIL_FROM=alerts@boing.local
ALERT_EMAIL_TO=admin@example.com

SLACK_WEBHOOK_URL=
WEBHOOK_TIMEOUT_SECONDS=5

# LLM Configuration (Optional)
LLM_ENABLED=false
LLM_ENDPOINT=http://localhost:8080/completion
LLM_MODEL=tinyllama
LLM_MAX_TOKENS=256
LLM_TEMPERATURE=0.3
LLM_TIMEOUT_SECONDS=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/boing.log

# Redis (Optional - for scaling)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Rate Limiting (API endpoints)
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60
